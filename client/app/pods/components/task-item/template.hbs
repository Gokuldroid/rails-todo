<div class="card task-item {{task_border}}">
  {{#more-options}}
    {{#if (eq task.done_state 1)}}
      <a class="dropdown-item" {{action 'setDoneState' 2 bubbles=false preventDefault=true}}><i class="material-icons material-icons-done active">done</i>Mark as done</a>
    {{else}}
      <a class="dropdown-item" {{action 'setDoneState' 1 bubbles=false preventDefault=true}}><i class="material-icons material-icons-done active">clear</i>Mark as undone</a>
    {{/if}}
    <a class="dropdown-item" {{action 'delete' bubbles=false preventDefault=true}}><i class="material-icons material-icons-done active">delete</i>Delete</a>
    {{#if (not-eq task.done_state 3)}}
      <a class="dropdown-item" {{action 'setDoneState' 3 bubbles=false preventDefault=true}}><i class="material-icons material-icons-done active">archive</i>Archive</a>    
    {{/if}}
  {{/more-options}}
  <div class="card-body">
    <div>
        <p>{{task.description}}</p>
    </div>
  </div>
  <div class="p-10">
    {{#if task.remind_at}}
      <small class="float-left">Remind at : {{date-format task.remind_at}}</small>
    {{else if task.dead_line}}
      <small class="float-left">Deadline : {{date-format task.dead_line}}</small>
    {{else}}
      <small class="float-left">Created at : {{date-format task.created_at}}</small>
    {{/if}}
    <div class="float-right">
      {{task-priority task=task saveOnChange=true}}
    </div>
    {{!-- <i class="material-icons float-right material-icons-sm" style="padding: 2px 10px;">delete</i> --}}
  </div>
</div>
{{yield}}
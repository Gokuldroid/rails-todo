<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 mt-5">
            <form class="shadow-sm p-5 mb-5 bg-white rounded">
                {{alert-bar alertMsg=input_error}}
                {{alert-bar alertMsg=singup_error_msg autoHide=true}}
                <div class="form-group">
                    <label>Username <span class="mandatory">*</span></label>
                    {{input value=signup_details.username class="form-control" placeholder="Username"}}
                </div>
                <div class="form-group">
                    <label>Email <span class="mandatory">*</span></label>
                    {{input value=signup_details.email placeholder="Email" type='email' class="form-control"}}
                </div>
                <div class="form-group">
                    <label>Password <span class="mandatory">*</span></label>
                    {{input value=signup_details.password placeholder="Password" type='password' class="form-control"}}
                </div>
                <div class="form-group">
                    <label>Confirm password <span class="mandatory">*</span></label>
                    {{input value=signup_details.confirm_password placeholder="Confirm password" type='password' class="form-control"}}
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary" {{action 'signup'}}>Signup</button>
                    <br>
                </div>
            </form>
        </div>
    </div>
</div>
{{outlet}}
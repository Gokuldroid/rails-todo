<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 mt-5">
            <form class="shadow-sm p-5 mb-5 bg-white rounded">
                {{alert-bar alertMsg=login_error}}
                {{alert-bar alertMsg=login_error_msg autoHide=true}}
                <div class="form-group">
                    <label>Username</label>
                    {{input value=username class="form-control" placeholder="Username"}}
                </div>
                <div class="form-group">
                    <label>Email</label>
                    {{input value=email placeholder="Email" type='email' class="form-control"}}
                </div>
                <div class="form-group">
                    <label>Password</label>
                    {{input value=password placeholder="Password" type='password' class="form-control"}}
                </div>
                <div class="form-group">
                    <label>Confirm password</label>
                    {{input value=confirm_password placeholder="Confirm password" type='password' class="form-control"}}
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary" {{action 'singup'}}>Signup</button>
                    <br>
                </div>
            </form>
        </div>
    </div>
</div>
{{outlet}}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6 mt-5">
            <form class="shadow-sm p-5 mb-5 bg-white rounded">
                {{alert-bar alertMsg=login_error}}
                {{alert-bar alertMsg=login_error_msg autoHide=true}}
                <div class="form-group">
                    <label for="formGroupExampleInput">Username <span class="mandatory">*</span></label>
                    {{input value=username class="form-control" placeholder="Username"}}
                </div>
                <div class="form-group">
                    <label for="formGroupExampleInput2">Password <span class="mandatory">*</span></label>
                    {{input value=password placeholder="Password" type='password' class="form-control"}}
                </div>
                <div class="form-group">
                    <button type="button" class="btn btn-primary" {{action 'login'}}>Login</button>
                    <br>
                </div>
            </form>
        </div>
    </div>
</div>
{{outlet}}